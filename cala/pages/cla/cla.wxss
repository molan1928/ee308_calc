page{
  display: flex;
  flex-direction: column;
  height: 100%
}

.result{
  flex: 30%;
  background-color: #DDEBF2;
  position: relative;
}
.result_num{
  position: absolute;
  font-size: 27pt;
  bottom: 5vh;
  right: 3vw;
}
.result_op{
  font-size: 15pt;
  position: absolute;
  bottom: 1vh;
  right: 3vw;
}
.btns{
  flex: 70%;
  display: flex;
  flex-direction: column;
  font-size: 17pt;
  border-top: 1px solid #a9e7f3;
  border-left: 1px solid #c8edf5;
}

.btns>view{
  flex: 1;
  display: flex;
}
.btns>view>view{
  flex:1;
  border-right: 1px solid #b7e2eb;
  border-bottom: 1px solid #a8d8e2;
  box-sizing: border-box;
  
  display: flex;
  align-items: center;
  justify-content: center;
}

.btns>view:last-child>view:first-child{
  flex: 2;
}
.btns>view:first-child>view:first-child{
  color: #ec5561;
}
.btns>view>view:last-child{
  color: #e98d84;
}
.bg{
  background-color: #c2eafa;
}
 